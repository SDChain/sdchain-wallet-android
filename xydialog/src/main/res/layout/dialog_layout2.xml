<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xy_dialog_bg2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="Title"
        android:textColor="@color/xydialog_colorTitle"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text=""
        android:textColor="@color/xydialog_colorMessage"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dip"
        android:background="#eeeeee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/positiveButton"
            style="@style/Dialog.TextView"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="end|right"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/info0004"
            android:textColor="@color/theme" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/negativeButton"
            style="@style/Dialog.TextView"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/info0005"
            android:textColor="@color/theme" />

    </LinearLayout>
</LinearLayout>