<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:actionBarSize">@dimen/dimen46</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:splitMotionEvents">false</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/theme_text_deep</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="add_friend_scan">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|right</item>
        <item name="android:padding">@dimen/dimen15</item>
    </style>

    <style name="DrawerLayout" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="titlebar_back">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
