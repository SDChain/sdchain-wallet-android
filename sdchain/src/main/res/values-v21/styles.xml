<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:actionBarSize">@dimen/dimen46</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/theme</item>
        <!--<item name="android:windowAnimationStyle">@style/Fade</item>-->

        <item name="android:splitMotionEvents">false</item>

    </style>

    <!--splash-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/translation</item>
    </style>

    <!--button-style-->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen50</item>
        <item name="android:layout_marginLeft">@dimen/dimen20</item>
        <item name="android:layout_marginRight">@dimen/dimen20</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:elevation">@dimen/dimen16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--button-style-->
    <style name="ButtonStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen50</item>
        <item name="android:layout_marginLeft">@dimen/dimen20</item>
        <item name="android:layout_marginRight">@dimen/dimen20</item>
        <item name="android:background">@drawable/selector_button2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/theme_text_deep</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="add_friend_scan">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|right</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/dimen14</item>
    </style>

    <style name="bill_choose_record" parent="add_friend_scan"></style>

    <style name="friend_add" parent="add_friend_scan"></style>

    <style name="DrawerLayout" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="titlebar_back">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
