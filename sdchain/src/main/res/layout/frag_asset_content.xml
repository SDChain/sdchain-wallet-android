<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <com.io.sdchain.widget.MySwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/paddingTop"
                        android:background="@color/theme" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen100"
                        android:background="@color/theme">

                        <FrameLayout
                            android:layout_width="@dimen/dimen28"
                            android:layout_height="@dimen/dimen28"
                            android:layout_marginLeft="@dimen/dimen20">

                            <ImageView
                                android:id="@+id/left_scan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/assets_scan" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="@dimen/dimen28"
                            android:layout_height="@dimen/dimen28"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen20">

                            <ImageView
                                android:id="@+id/slide"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/assets_account" />
                        </FrameLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen140"
                        android:background="@color/assets_bg_deep"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v4.widget.Space
                                android:layout_width="@dimen/dimen0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen2"
                                android:layout_marginTop="@dimen/dimen50"
                                android:gravity="center_horizontal"
                                android:text="1192171830@qq.com"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_20" />

                            <RelativeLayout
                                android:layout_width="@dimen/dimen0"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/dimen3"
                                android:layout_weight="1">

                                <com.io.sdchain.widget.ShineTextView
                                    android:id="@+id/jihuo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/shape_jihuo_bg"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/dimen4"
                                    android:paddingRight="@dimen/dimen4"
                                    android:text="@string/info585"
                                    android:textColor="@color/assets_jihuo_text"
                                    android:textSize="@dimen/text_12"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="6Utmiusye....rnrCN5NAqY"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.v4.widget.Space
                                android:layout_width="@dimen/dimen0"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <FrameLayout
                                android:layout_width="@dimen/dimen40"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/dimen10"
                                android:padding="@dimen/dimen10">

                                <ImageView
                                    android:id="@+id/walletAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@mipmap/ic_code" />
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen60"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/dimen80"
                        android:layout_height="@dimen/dimen80"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_shape" />

                    <ImageView
                        android:layout_width="@dimen/dimen60"
                        android:layout_height="@dimen/dimen60"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_userpic" />
                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/balances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/LineStyle"
                android:layout_marginLeft="@dimen/dimen0"
                android:layout_marginRight="@dimen/dimen0" />

        </LinearLayout>

    </com.io.sdchain.widget.MySwipeRefreshLayout>


</LinearLayout>