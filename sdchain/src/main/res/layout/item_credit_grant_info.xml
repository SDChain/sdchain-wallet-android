<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_marginRight="@dimen/dimen16"
        android:layout_marginTop="10dp"
        android:textColor="@color/credit_grant_text"
        android:textSize="@dimen/text_14"
        android:maxLines="3"
        tools:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_marginRight="@dimen/dimen16"
        android:layout_marginBottom="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen16"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen5"
            android:gravity="center|left|top"
            android:textColor="@color/msg_msg_text"
            android:textSize="@dimen/text_12"/>

        <TextView
            android:id="@+id/txt_read"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/msg_msg_text"
            android:textSize="@dimen/text_12"/>



    </LinearLayout>


    <View
        style="@style/LineStyle"
        android:layout_height="8dp"
        android:layout_marginLeft="@dimen/dimen0"
        android:layout_marginRight="@dimen/dimen0"
        android:background="#f4f4f4"
        />

</LinearLayout>